    <!-- Latest News -->
    <section class="blog-area ptb-100">
        <div class="container">
            <div class="section-title">
                <h2>Yeni Məqalələr</h2>
                <p>Texnologiya xəbərləri.<br />Texnologiya aləmində ən son yeniliklər.</p>
            </div>

            <div class="owl-carousel blog-slides owl-theme">
                @foreach (var article in Model.ArticleList)
                {
                     <div class="single-blog-item">
                    <div class="blog-image">
                        <a asp-controller="Article" asp-action="ArticleDetails"  asp-route-id="@article.Id">
                            <img class="img-fluid" src="@article.MainPhoto" alt="@article.MetaDescription"></a>
                        <div class="post-tag"><a href="/blog/">@article.Category.Name</a></div>
                    </div>
                    <div class="blog-post-content"><span class="date">@article.CreatedDate.ToString("MMM") @article.CreatedDate.Day, @article.CreatedDate.Year</span>
                        <h3><a asp-controller="Article" asp-action="ArticleDetails"  asp-route-id="@article.Id">@article.Name</a></h3>
                        <p>  @(article.Description!=null && article.Description.Length>150 ? article.Description.Substring(0,150):article.Description)...</p><a class="read-more-btn" asp-controller="Article" asp-action="ArticleDetails"  asp-route-id="@article.Id">Ətraflı
                            Oxu<i class="fa-solid fa-angles-right"></i></a>
                    </div>
                </div>
                }
               
               
               
            </div>
        </div>



    </section>
