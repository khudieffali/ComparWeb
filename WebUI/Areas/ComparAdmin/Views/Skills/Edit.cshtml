@model Entities.Concrete.Skill

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Skill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MainPhoto" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MainPhoto" class="control-label"></label>
                <input type="file" name="newMain" class="form-control" />
                <span asp-validation-for="MainPhoto" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label class="d-block font-weight-bold">Old MainPhoto</label>
                @if(Model.MainPhoto!=null)
                {
                    <img src="@Model.MainPhoto" width="180" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
