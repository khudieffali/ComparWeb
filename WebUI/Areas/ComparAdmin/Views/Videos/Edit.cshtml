@model Entities.Concrete.Video

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Video</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="VideoUrl" />
            <input type="hidden" asp-for="PhotoUrl" />
            <div class="form-group">
                <label asp-for="VideoUrl" class="control-label"></label>
                <input type="file" name="newVideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl" class="control-label"></label>
                <input type="file" name="newPhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label class="d-block font-weight-bold">Old MainPhoto</label>
                @if(Model.PhotoUrl!=null)
                {
                    <img src="@Model.PhotoUrl" width="150" />
                }
            </div>
            <div class="form-group">
                <label asp-for="CourseTopicId" class="control-label"></label>
                    <select asp-for="CourseTopicId" class ="form-control">
                    <option value=0 disabled selected>...Kurs Mövzusu Seçin...</option>
                    @foreach (var item in ViewBag.courseTopicList as List<Entities.Concrete.CourseTopic>)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                 <span asp-validation-for="CourseTopicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
